<!-- book.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .book-info {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 20px;
        }

        .book-info h2 {
            margin-top: 0;
        }

        .book-info p {
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>All Books</h1>
        <% books.forEach(book => { %>
            <div class="book-info">
                <h2><%= book.title %></h2>
                <p>Author: <%= book.author %></p>
                <p>Genre: <%= book.genre %></p>
                <p>Publication Year: <%= book.publicationYear %></p>
                <p>Quantity Available: <%= book.quantityAvailable %></p>
                <p>Price: <%= book.price %> USD</p>
            </div>
        <% }); %>
    </div>
</body>
</html>
